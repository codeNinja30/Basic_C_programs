#include <stdio.h>

int addNumbers(int n1, int n2) {
  int result;
  result = n1 + n2;
  return result;
}

int multiplyNumbers(int n1, int n2) {
  return n1 * n2;
}

int main() {
  int a, b;
  printf("Enter two numbers: \n");
  scanf("%d%d",&a,&b);
  printf("sum: %d\n", addNumbers(a, b));

  printf("product: %d\n", multiplyNumbers(a, b));
}
